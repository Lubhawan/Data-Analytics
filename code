# Use streaming for long requests
    response_text = ""
    with client.messages.stream(
        model="claude-3-5-sonnet-20250219",
        max_tokens=80000,
        temperature=0.7,
        system="You are an expert at analyzing PDF documentation and matching questions to relevant topics.",
        messages=[
            {"role": "user", "content": prompt},
        ],
    ) as stream:
        print("Receiving response stream...")
        for text in stream.text_stream:
            response_text += text
            # Optional: Print progress indicator
            print(".", end="", flush=True)
        print("\nStream complete.")
   
    return response_text
